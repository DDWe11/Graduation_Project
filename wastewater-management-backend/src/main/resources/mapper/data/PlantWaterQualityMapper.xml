<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.jevonD.wastewaterMS.modules.data.repository.PlantWaterQualityRepository">
    <select id="findPageByConditions" resultType="org.jevonD.wastewaterMS.modules.data.entity.PlantWaterQuality">
        SELECT *
        FROM plant_water_quality
        <where>
            <if test="startDate != null">
                AND record_date &gt;= #{startDate}
            </if>
            <if test="endDate != null">
                AND record_date &lt;= #{endDate}
            </if>
        </where>
        ORDER BY record_date DESC
    </select>
</mapper>